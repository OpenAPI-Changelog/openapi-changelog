{
  "name": "openapi-changelog",
  "version": "0.0.1",
  "description": "Compute the changes between two OpenAPI specifications and output them nicely",
  "author": "Ismail Bennani",
  "license": "MIT",
  "repository": "https://github.com/OpenAPI-Changelog/openapi-changelog",
  "bugs": "https://github.com/OpenAPI-Changelog/openapi-changelog/issues",
  "keywords": [
    "openapi",
    "changelog",
    "differences"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "scripts": {
    "build": "rimraf dist & tsup --config tsup.config.ts",
    "build-website": "npm run pack & tsc --esModuleInterop true website/main.ts & browserify -p esmify website/main.js | terser -c > website/main.bundle.js",
    "pack": "rimraf dist & tsup --config tsup.pack.config.ts",
    "pack-website": "npm run build-website & copyfiles -u 1 website/*.html website/*.bundle.js website/*.css dist/website"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/diff": "^5.2.1",
    "@types/eslint__js": "^8.42.3",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.14.10",
    "browserify": "^17.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "esmify": "^2.1.1",
    "markdown-it": "^14.1.0",
    "prettier": "3.3.2",
    "rimraf": "^6.0.1",
    "terser": "^5.31.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.32",
    "diff": "^5.2.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "semver": "^7.6.2",
    "util": "^0.12.5",
    "winston": "^3.13.1",
    "word-wrap": "^1.2.5",
    "yargs": "^17.7.2"
  },
  "files": [
    "dist/*"
  ]
}
