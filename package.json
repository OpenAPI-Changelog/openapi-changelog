{
  "name": "openapi-changelog",
  "version": "0.0.1",
  "description": "Compute the changes between two OpenAPI specifications and output them nicely",
  "author": "Ismail Bennani",
  "license": "MIT",
  "keywords": [
    "openapi",
    "changelog",
    "differences"
  ],
  "main": "build/index.js",
  "bin": "build/cli.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles -u 2 ./src/changelog/templates/* ./build/changelog/"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "dependencies": {
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.32",
    "handlebars": "^4.7.8",
    "openapi-types": "^12.1.3",
    "semver": "^7.6.2",
    "winston": "^3.13.1",
    "yargs": "^17.7.2"
  },
  "files": [
    "src/*",
    "build/*",
    "tsconfig.json"
  ]
}
